	  GPRINT:files:MIN:"%9.0lf" \
	  GPRINT:files:AVERAGE:"%9.0lf" \
	  GPRINT:files:MAX:"%9.0lf\l" \
	  LINE1:ffree#652b34:"ffree  \t" \
	  GPRINT:ffree:LAST:"%9.0lf" \
