	  GPRINT:ffree:AVERAGE:"%9.0lf" \
	  GPRINT:ffree:MAX:"%9.0lf\l" \
	  LINE1:asyncwrites#652b34:"asyncwrites\t" \
	  GPRINT:asyncwrites:LAST:"%9.0lf" \
